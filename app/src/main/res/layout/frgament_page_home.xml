<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_home_top"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF" >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4"
                android:layout_alignParentTop="true"></View>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="主页"
                android:textColor="#000"
                android:textSize="20sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F4F4"
                android:layout_alignParentBottom="true"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#999999">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_home_msg"
                android:layout_width="match_parent"
                android:layout_height="160dp">
            </android.support.v4.view.ViewPager>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:padding="5dp">
                <!--android:background="#55888888"-->
                <LinearLayout
                    android:id="@+id/ll_home_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="已申请人数:"
                android:gravity="right"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5345556"
                android:textColor="#FF3030"
                android:padding="5dp"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/tv_home_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---------------资料极少，放款极速---------------"
                android:lines="1"
                android:textColor="#FF7F00"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF">
            <RelativeLayout
                android:id="@+id/rl_home_creditClass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/bg_item">
                <View
                    android:id="@+id/vw_item_view1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle"
                    android:layout_centerHorizontal="true"/>
                <hainu.com.adultloan.view.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv_item_class1"
                    android:layout_below="@id/vw_item_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#47B4F1"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:text="平台介绍"/>
                <TextView
                    android:layout_below="@id/tv_item_class1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:text="更加了解我们"/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F2F2F2"/>

            <RelativeLayout
                android:id="@+id/rl_home_consult"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/bg_item">
                <View
                    android:id="@+id/vw_item_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle1"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/chat"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv_item_class"
                    android:layout_below="@id/vw_item_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#52BA76"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:text="在线咨询"/>
                <TextView
                    android:layout_below="@id/tv_item_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:text="在线交流你的疑问"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

